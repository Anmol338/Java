package week2_2;
import java.util.Scanner;
public class Calculator {

	public static void main(String[] args) {
		int fNum,sNum,sum,diff,pro,div,rem,pow;
		System.out.print("Enter the first number: ");
		fNum = Integer.parseInt(new Scanner(System.in).nextLine());
		System.out.print("Enter thesecond number: ");
		sNum = Integer.parseInt(new Scanner(System.in).nextLine());
		
		//Calculate
		sum = fNum + sNum;
		System.out.println("The sum is"+sum);
		
		diff = fNum - sNum;
		System.out.println("The diff is"+diff);

		pro = fNum * sNum;
		System.out.println("The product is"+pro);
		
		div = fNum / sNum;
		System.out.println("The div is"+div);
		
		rem = fNum % sNum;
		System.out.println("The sum is"+rem);
		
		sum = fNum + sNum;
		System.out.println("The sum is"+sum);
	}

}
